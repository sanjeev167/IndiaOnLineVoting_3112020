					"ajax" : {
						
						"url" : "paginated?voterId=" + voterId,

						"type" : "POST",
					},

					"columns" : [
						{
							"searchable" : false,
							"orderable" : false,
							"targets" : 0,
							"render" : function(data, type, full, meta) {
								return meta.row + 1;// Will send row index
							}
						},
						

						{
							"data" : "id",
							"name" : "ID",
							"title" : "ID",
							"searchable" : false,
							"bVisible" : false, // used for hiding a column
						},
						{
							"data" : "Voter",
							"name" : "voter",
							"title" : "Voter"
						},
						{
							"data" : "father",
							"name" : "father",
							"title" : "Father"
						},
						{
							"data" : "boothName",
							"name" : "boothName",
							"title" : "Booth Name"
						},
						{
							"data" : "boothNo",
							"name" : "boothNo",
							"title" : "Booth No"
						},
						{
							"data" : "address",
							"name" : "address",
							"title" : "Address"
						},
						{
							"data" : "voterId",
							"name" : "voterId",
							"title" : "VoterId"
